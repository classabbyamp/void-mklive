#!/bin/bash

set -eu

ARCH=$(uname -m)
IMAGES="netinstall base enlightenment xfce mate cinnamon gnome kde lxde lxqt"
REPO=
DATE=$(date +%Y%m%d)

help() {
    echo "${0#/*}: [-a arch] [-b base|enlightenment|xfce|mate|cinnamon|gnome|kde|lxde|lxqt] [-r repo]" >&2
}

while getopts "a:b:hr:" opt; do
case $opt in
    a) ARCH="$OPTARG";;
    b) IMAGES="$OPTARG";;
    h) help; exit 0;;
    r) REPO="-r $OPTARG $REPO";;
    *) help; exit 1;;
esac
done
shift $((OPTIND - 1))

if [ ! -x mklive.sh ]; then
    echo mklive.sh not found >&2
    exit 1
fi

if [ ! -r installer/lib.sh ]; then
    echo installer/lib.sh not found >&2
    exit 1
fi

source installer/lib.sh

includedir=$(mktemp -d -p .)

cleanup() {
    rm -rf "${includedir}"
}
trap "cleanup" INT TERM QUIT

cp -r installer "${includedir}/"

for variant in $IMAGES; do
    IMG=void-live-${ARCH}-${DATE}-${variant}.iso
    SETUP_TYPE=iso setup_variant "$variant"
    ./mklive.sh -a "$ARCH" -o "$IMG" -p "$PKGS" -S "$SERVICES" -I "${includedir}" ${REPO} "$@"
done
